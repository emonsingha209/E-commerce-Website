<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Select User For Add to Cart</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h2>Selected Item Id @ViewBag.ProductId</h2>
        <h2>Select User for Add to Cart</h2>
        @using (Html.BeginForm("SelectUserForAddCart", "Users", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Enter User ID:")
                @Html.TextBox("userId", null, new { @class = "form-control", type = "number", step = "1" })

                @Html.Hidden("productId", ((int?)ViewBag.ProductId))
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>

            <h2 class="mt-3 alert alert-success">@ViewBag.Okay</h2>
        }
    </div>
</body>
</html>
